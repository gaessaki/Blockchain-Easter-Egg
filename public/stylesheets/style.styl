html
  overflow auto
body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin 0
a
  color #00B7FF

//divs
.bc-c2
  display flex
  flex-direction row
.bc-well
  flex-grow 1
.container
  height 100%
  width 100%
.form-group
  margin 15px
.help-slide-up
  margin auto
  margin-bottom 10px
.main-panel
  height calc(100vh - 150px)
  margin 75px
  padding-left 50px
  padding-right 50px
  display flex
  flex-direction column
  background-color rgba(128, 128, 128, 0.3)

//inputs
textarea
  vertical-align top

//buttons
.chev
  box-sizing border-box
  color rgb(255, 255, 255)
  font-size 30px
  text-shadow: 1px 1px 1px #666666

//elements
#rotatingGlobe
  width 650px
  height 650px
  margin-left -12%
  margin-top -6.5%
  position absolute
  z-index -1
